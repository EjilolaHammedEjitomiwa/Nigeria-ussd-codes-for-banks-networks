<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:elevation="7dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:id="@+id/general_codes_text_codes"
                    android:background="@color/codes_color"
                    android:textColor="@color/tool_bar_text_color"
                    android:layout_width="0dp"
                    android:text="*123"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="5dp"
                    android:background="#E0E0E0"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/general_codes_title_text_view"
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:textColor="#3e3b3b"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/general_codes_call_icon"
                    android:layout_width="50dp"
                    android:src="@drawable/icon_calls"
                    android:layout_height="50dp" />


            </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>